<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BusyBag" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="CustomLightTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="CustomChipBtnStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="android:textColor">@color/item_selector</item>
        <item name="chipStrokeColor">@color/stroke_bg</item>
        <item name="fontFamily">"@font/poppins_light"</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CustomBottomBarStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

</resources>